{
  "version": 2,
  "name": "climaaid-disaster-management",
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "backend/package.json",
      "use": "@vercel/node"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "VITE_API_URL": "https://climaaid-backend.vercel.app",
    "VITE_WEBSOCKET_URL": "wss://climaaid-backend.vercel.app",
    "VITE_OPENWEATHER_API_KEY": "your_openweather_api_key",
    "VITE_FIREBASE_API_KEY": "your_firebase_api_key",
    "VITE_FIREBASE_AUTH_DOMAIN": "your_firebase_auth_domain",
    "VITE_FIREBASE_PROJECT_ID": "your_firebase_project_id",
    "VITE_TWILIO_ACCOUNT_SID": "your_twilio_account_sid",
    "VITE_EMAILJS_SERVICE_ID": "your_emailjs_service_id",
    "VITE_EMAILJS_TEMPLATE_ID": "your_emailjs_template_id",
    "VITE_EMAILJS_USER_ID": "your_emailjs_user_id",
    "VITE_REALTIME_DATA_ENABLED": "true",
    "VITE_EARTHQUAKE_ALERTS": "true",
    "VITE_WEATHER_ALERTS": "true",
    "VITE_TRAFFIC_INCIDENTS": "true",
    "VITE_HOSPITAL_CAPACITY": "true",
    "VITE_VOLUNTEER_ALERTS": "true",
    "JWT_SECRET": "your_jwt_secret_key",
    "MONGODB_URI": "your_mongodb_connection_string",
    "REDIS_URL": "your_redis_connection_string",
    "TWILIO_AUTH_TOKEN": "your_twilio_auth_token",
    "TWILIO_PHONE_NUMBER": "your_twilio_phone_number",
    "NODEMAILER_EMAIL": "your_nodemailer_email",
    "NODEMAILER_PASSWORD": "your_nodemailer_password",
    "SOLANA_RPC_URL": "https://api.mainnet-beta.solana.com",
    "ETHEREUM_RPC_URL": "your_ethereum_rpc_url",
    "FIREBASE_PROJECT_ID": "your_firebase_project_id",
    "FIREBASE_PRIVATE_KEY": "your_firebase_private_key",
    "FIREBASE_CLIENT_EMAIL": "your_firebase_client_email",
    "INFLUXDB_URL": "your_influxdb_url",
    "INFLUXDB_TOKEN": "your_influxdb_token",
    "MQTT_BROKER_URL": "your_mqtt_broker_url",
    "WEB_PUSH_PUBLIC_KEY": "your_web_push_public_key",
    "WEB_PUSH_PRIVATE_KEY": "your_web_push_private_key",
    "WEB_PUSH_EMAIL": "your_web_push_email",
    "RATE_LIMIT_WINDOW_MS": "900000",
    "RATE_LIMIT_MAX": "100",
    "SESSION_SECRET": "your_session_secret",
    "ENCRYPTION_KEY": "your_encryption_key",
    "API_VERSION": "v1",
    "LOG_LEVEL": "info"
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/api/$1"
    },
    {
      "src": "/socket.io/(.*)",
      "dest": "/backend/socket.io/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ],
  "functions": {
    "backend/**/*.js": {
      "runtime": "nodejs18.x"
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    },
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/((?!api|socket\\.io|_next|favicon\\.ico).*)",
      "destination": "/index.html"
    }
  ]
}
